<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/save_header">

        <EditTextPreference
            app:key="date"
            app:isPreferenceVisible="false">
        </EditTextPreference>

        <EditTextPreference
            app:key="directory"
            app:title="@string/directory_title"
            app:useSimpleSummaryProvider="true">
        </EditTextPreference>

        <EditTextPreference
            app:key="filename"
            app:title="@string/filename_title"
            app:useSimpleSummaryProvider="true">
        </EditTextPreference>

        <SwitchPreferenceCompat
            app:key="uapp"
            app:summaryOff="@string/uapp_summary_off"
            app:summaryOn="@string/uapp_summary_on"
            app:title="@string/uapp" />

    </PreferenceCategory>

</PreferenceScreen>
